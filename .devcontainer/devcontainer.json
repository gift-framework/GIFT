{
  "name": "GIFT Framework",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },

  // Resource allocation for Codespaces
  "hostRequirements": {
    "cpus": 4,
    "memory": "8gb",
    "storage": "32gb"
  },

  // Features to add
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    }
  },

  // VS Code customizations
  "customizations": {
    "vscode": {
      "settings": {
        // General
        "editor.fontSize": 14,
        "editor.fontFamily": "'Fira Code', 'Cascadia Code', 'JetBrains Mono', Consolas, monospace",
        "editor.fontLigatures": true,
        "editor.formatOnSave": true,
        "editor.rulers": [88, 120],
        "editor.wordWrap": "on",
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true,

        // Terminal
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.fontSize": 13,

        // Python
        "python.defaultInterpreterPath": "/usr/bin/python3",
        "python.formatting.provider": "none",
        "python.analysis.typeCheckingMode": "basic",
        "python.analysis.autoImportCompletions": true,
        "[python]": {
          "editor.defaultFormatter": "charliermarsh.ruff",
          "editor.formatOnSave": true,
          "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports": "explicit"
          }
        },

        // Jupyter
        "jupyter.askForKernelRestart": false,
        "jupyter.interactiveWindow.textEditor.executeSelection": true,
        "notebook.cellToolbarLocation": {
          "default": "right",
          "jupyter-notebook": "left"
        },
        "notebook.output.textLineLimit": 100,

        // Lean 4
        "lean4.toolchainPath": "",
        "lean4.input.leader": "\\",

        // Git
        "git.autofetch": true,
        "git.confirmSync": false,
        "git.enableSmartCommit": true,

        // Files
        "files.associations": {
          "*.lean": "lean4",
          "*.v": "coq",
          "*.ipynb": "jupyter-notebook",
          "lakefile.lean": "lean4",
          "_CoqProject": "plaintext"
        },
        "files.exclude": {
          "**/__pycache__": true,
          "**/.ipynb_checkpoints": true,
          "**/*.pyc": true,
          "**/.lake": false,
          "**/_build": true
        },

        // Explorer
        "explorer.confirmDelete": false,
        "explorer.confirmDragAndDrop": false,

        // Markdown
        "markdown.preview.fontSize": 14,
        "[markdown]": {
          "editor.wordWrap": "on",
          "editor.quickSuggestions": {
            "other": true,
            "comments": false,
            "strings": false
          }
        }
      },

      // Extensions
      "extensions": [
        // Python
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.debugpy",
        "charliermarsh.ruff",

        // Jupyter
        "ms-toolsai.jupyter",
        "ms-toolsai.jupyter-keymap",
        "ms-toolsai.jupyter-renderers",
        "ms-toolsai.vscode-jupyter-cell-tags",
        "ms-toolsai.vscode-jupyter-slideshow",

        // Lean 4
        "leanprover.lean4",

        // Coq
        "maximedenes.vscoq",

        // Git & GitHub
        "eamodio.gitlens",
        "github.vscode-pull-request-github",
        "github.copilot",
        "github.copilot-chat",

        // Markdown & Documentation
        "yzhang.markdown-all-in-one",
        "bierner.markdown-mermaid",
        "bierner.markdown-preview-github-styles",
        "davidanson.vscode-markdownlint",

        // Data & Visualization
        "mechatroner.rainbow-csv",
        "randomfractalsinc.vscode-data-preview",
        "GrapeCity.gc-excelviewer",

        // LaTeX
        "james-yu.latex-workshop",

        // General productivity
        "streetsidesoftware.code-spell-checker",
        "usernamehw.errorlens",
        "gruntfuggly.todo-tree",
        "wayou.vscode-todo-highlight",
        "aaron-bond.better-comments",
        "oderwat.indent-rainbow",
        "christian-kohler.path-intellisense",

        // Themes & Icons (optional but nice)
        "pkief.material-icon-theme",
        "zhuangtongfa.material-theme",

        // Remote & containers
        "ms-vscode-remote.remote-containers",
        "ms-azuretools.vscode-docker",

        // YAML & JSON
        "redhat.vscode-yaml",
        "zainchen.json"
      ]
    }
  },

  // Port forwarding
  "forwardPorts": [8888, 8889, 8890],
  "portsAttributes": {
    "8888": {
      "label": "Jupyter Lab",
      "onAutoForward": "notify"
    },
    "8889": {
      "label": "Jupyter Notebook",
      "onAutoForward": "silent"
    },
    "8890": {
      "label": "Voila Dashboard",
      "onAutoForward": "silent"
    }
  },

  // Lifecycle scripts
  "postCreateCommand": "bash .devcontainer/post-create.sh",
  "postStartCommand": "echo 'ðŸŽ‰ GIFT Framework ready! Run: jupyter lab --no-browser'",

  // Environment variables
  "containerEnv": {
    "GIFT_VERSION": "2.3",
    "PYTHONDONTWRITEBYTECODE": "1",
    "PYTHONUNBUFFERED": "1",
    "MPLBACKEND": "agg"
  },

  // Mount options
  "mounts": [
    "source=${localWorkspaceFolderBasename}-mathlib-cache,target=/home/vscode/.cache/mathlib,type=volume",
    "source=${localWorkspaceFolderBasename}-opam-cache,target=/home/vscode/.opam,type=volume"
  ],

  // User
  "remoteUser": "vscode"
}
