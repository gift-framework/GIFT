#!/bin/bash

# GIFT Framework v2.3 Post-Build Script for Binder
echo "GIFT Framework v2.3 Binder Setup"

# Enable Jupyter widgets
jupyter nbextension enable --py --sys-prefix ipywidgets

# Install additional tools if needed
pip install --no-deps gmpy2 || echo "gmpy2 installation failed, continuing..."

# Set up environment
export GIFT_VERSION=v2.3.1
export PYTHONPATH="${PYTHONPATH}:."

# Create symbolic links for easy access
ln -sf publications/markdown/gift_2_3_main.md README_main.md || echo "Could not create symlink"

echo "GIFT Framework v2.3.1 Binder environment ready!"
echo "Main paper: publications/markdown/gift_2_3_main.md"
echo "Supplements: publications/markdown/"
echo "Notebooks: G2_ML/"
